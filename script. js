// ⏰ عرض الوقت
function updateClock() {
  const now = new Date();
  const time = now.toLocaleTimeString('ar-TN');
  document.getElementById('clock').textContent = time;
}
setInterval(updateClock, 1000);
updateClock();

// 👁️‍🗨️ عدد الزيارات localStorage
let visits = localStorage.getItem('aem-visits') || 0;
visits++;
localStorage.setItem('aem-visits', visits);
document.getElementById('visits').textContent = visits;

// 📰 شريط أخبار BBC
fetch("https://api.rss2json.com/v1/api.json?rss_url=https://feeds.bbci.co.uk/arabic/rss.xml")
  .then(res => res.json())
  .then(data => {
    const news = data.items.map(item => `🗞️ ${item.title}`).join(" | ");
    document.getElementById("news-bar").textContent = news;
  })
  .catch(() => {
    document.getElementById("news-bar").textContent = "❌ فشل تحميل الأخبار";
  });
